<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Condominions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("styles", required: false)

</head>
<body>
    @* Información usuario *@
    @{
        int cedula = 0;
        String email = "Perfil";
        String rol = "";

        if (Session["User"] != null)
        {
            Infraestructure.Models.Usuario usuario = new Infraestructure.Models.Usuario();
            usuario = (Infraestructure.Models.Usuario)Session["User"];
            cedula = usuario.Id;
            email = usuario.Email;
            rol = usuario.Rol;

        }
    }

    @if (Session["User"] != null)
    {
        if (rol.Equals("Administrador"))
        {
            @Html.Partial("_Menu")

        }
        else
        {
            @Html.Partial("_MenuUser");

        }
    }
    else
    {
        @Html.Partial("_Menu");
    }

    <br /><hr /><br />
    <div class="container body-content">

        @RenderBody()
        <br />
        <hr />
        <br />
        <footer style="text-align:center; color:darkgreen">
            <div class="row">
                <div class="col-lg-6">
                    <p>&copy; @DateTime.Now.Year - Mi Proyecto CONDOMINIONS</p>
                </div>
                <div class="col-lg-6">
                    <p>Programación en Ambiente Web II - ISW 711</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
