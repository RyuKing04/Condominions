@model IEnumerable<Infraestructure.Models.Avisos>

@{
    ViewBag.Title = "Información";
}

<h2 style="text-align:center">Información del Condominio</h2>


<div class="row">
    <div class="card-group">

        @foreach (var item in Model)
        {
            <div class="col col-3">
                <div class="card" style="height: 350px; text-align:center">

                    @if (item.EstadoTipoInfo.Equals("Noticias"))
                    {

                        if (item.Documento != null)
                        {

                            <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.Documento)" alt="@Html.DisplayFor(modelItem => item.Descripcion)" class="img-thumbnail" style="width:250px; margin: 0 auto" />

                        }

                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Fecha)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                        </div>


                    }
                    else if (item.EstadoTipoInfo.Equals("Avisos"))
                    {
                        if (item.Documento != null)
                        {

                            <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.Documento)" alt="@Html.DisplayFor(modelItem => item.Descripcion)" class="img-thumbnail" style="width: 250px; margin: 0 auto" />

                        }

                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Fecha)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                        </div>
                    }
                    else if (item.EstadoTipoInfo.Equals("Archivos Documentales"))
                    {
                        if (item.Documento != null)
                        {

                            <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.Documento)" alt="@Html.DisplayFor(modelItem => item.Descripcion)" class="img-thumbnail" style="width: 250px; margin: 0 auto" />

                        }

                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Fecha)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                        </div>

                    }
                </div>
            </div>
        }
    </div>

</div>





